<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SM Department Store Employee Record</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            color: #333333;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #003399;
            color: #ffffff;
            text-align: center;
            padding: 0.5em 0;
        }
        header img {
            width: 90px;
            height: auto;
        }
        h1 {
            margin: 0.5em 0;
            font-size: 1.2em;
            font-weight: bold;
        }
        .form-container, .secondform {
            width: 80%;
            margin: 1em auto;
            padding: 1em;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        .form-row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 1em;
        }
        .form-row > div {
            flex: 1;
            padding: 0.5em;
        }
        input[type="text"], input[type="date"], input[type="email"], select {
            width: 100%;
            padding: 0.5em;
            border: 1px solid #cccccc;
            border-radius: 4px;
            font-size: 16px;
            box-sizing: border-box;
        }
        input[type="submit"], .delete-button {
            background-color: #ff0000;
            color: #ffffff;
            padding: 0.75em;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        input[type="submit"]:hover, .delete-button:hover {
            background-color: #cc0000;
            box-shadow: 0 0 10px rgba(255, 0, 0, 0.5);
        }
        .delete-button {
            background-color: #666666;
        }
        .delete-button:hover {
            background-color: #333333;
        }
        table {
            width: 100%;
            margin: 2em auto;
            border-collapse: collapse;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            border: 1px solid #cccccc;
        }
        th, td {
            padding: 1em;
            text-align: left;
            border-bottom: 1px solid #cccccc;
        }
        th {
            background-color: #003399;
            color: #ffffff;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #e0e0e0;
        }
        .button-container {
            text-align: center;
            margin-top: 1em;
        }
        .table-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }
        .table-container table {
            flex: 1;
            margin: 0.5em;
        }
        .back-link {
            display: block;
            width: 10%;
            margin: 1em auto;
            padding: 0.5em;
            text-align: center;
            background-color: #003399;
            color: #ffffff;
            text-decoration: none;
            border-radius: 4px;
            font-size: 16px;
        }
        .back-link:hover {
            background-color: #002280;
        }
    </style>
</head>
<body>
    <header>
        <img src="https://seeklogo.com/images/S/sm-supermalls-logo-59BBFA06C2-seeklogo.com.png" alt="SM Department Store Logo">
        <h1>SM Department Store Employee Record System</h1>
    </header>

    <div class="form-container">
        <form action="/add-employee" method="post">
            <div class="form-row">
                <div><input type="text" name="employeeId" placeholder="Employee ID" required></div>
                <div><input type="text" name="name" placeholder="Name" required></div>
            </div>
            <div class="form-row">
                <div>
                    <select name="position" required>
                        <option value="">Select Position</option>
                        <option value="Sales Associate">Sales Associate</option>
                        <option value="Cashier">Cashier</option>
                        <option value="Department Manager">Department Manager</option>
                    </select>
                </div>
                <div>
                    <select name="department" required>
                        <option value="">Select Department</option>
                        <option value="Clothing">Clothing</option>
                        <option value="Electronics">Electronics</option>
                        <option value="Home Appliances">Home Appliances</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div><input type="text" name="location" placeholder="Location" required></div>
                <div>
                    <select name="employmentStatus" required>
                        <option value="">Select Employment Status</option>
                        <option value="Full-time">Full-time</option>
                        <option value="Part-time">Part-time</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div><input type="date" name="hireDate" placeholder="Hire Date" required></div>
                <div>
                    <select name="gender" required>
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div>
                    <select name="maritalStatus" required>
                        <option value="">Select Marital Status</option>
                        <option value="Single">Single</option>
                        <option value="Married">Married</option>
                        <option value="Divorced">Divorced</option>
                        <option value="Widowed">Widowed</option>
                    </select>
                </div>
                <div><input type="text" name="nationality" placeholder="Nationality" required></div>
            </div>
            <div class="form-row">
                <div><input type="text" name="address" placeholder="Address" required></div>
                <div><input type="text" name="phoneNumber" placeholder="Phone Number" required></div>
            </div>
            <div class="form-row">
                <div><input type="email" name="email" placeholder="Email" required></div>
            </div>
            <div class="button-container">
                <input type="submit" value="Add Employee">
            </div>
        </form>
    </div>

    <div class="secondform">
        <form id="deleteForm" action="/delete" method="post">
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Select</th>
                            <th>Employee ID</th>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Department</th>
                            <th>Location</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data && data.length > 0) { %>
                            <% data.forEach((item) => { %>
                                <tr>
                                    <td><input type="checkbox" name="deleteIds" value="<%= item._id %>"></td>
                                    <td><%= item.employeeId %></td>
                                    <td><%= item.name %></td>
                                    <td><%= item.position %></td>
                                    <td><%= item.department %></td>
                                    <td><%= item.location %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6">No data available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <table>
                    <thead>
                        <tr>
                            <th>Employment Status</th>
                            <th>Hire Date</th>
                            <th>Gender</th>
                            <th>Marital Status</th>
                            <th>Nationality</th>
                            <th>Address</th>
                            <th>Phone Number</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data && data.length > 0) { %>
                            <% data.forEach((item) => { %>
                                <tr>
                                    <td><%= item.employmentStatus %></td>
                                    <td><%= item.hireDate %></td>
                                    <td><%= item.gender %></td>
                                    <td><%= item.maritalStatus %></td>
                                    <td><%= item.nationality %></td>
                                    <td><%= item.address %></td>
                                    <td><%= item.phoneNumber %></td>
                                    <td><%= item.email %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="8">No data available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <div class="button-container">
                    <button type="button" class="delete-button" onclick="confirmDeletion()">Delete Selected</button>
                </div>
            </div>
        </form>
    </div>

    <a href="/" class="back-link">Back to Home</a>

    <script>
        function confirmDeletion() {
            if (confirm('Are you sure you want to delete the selected records?')) {
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
</body>
</html>
